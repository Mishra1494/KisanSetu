<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Search Results - KrishiMitra</title>
  <link rel="stylesheet" href="/styles.css"/>
  <style>
    .search-results {
      padding: 40px 20px;
      background-color: #f6f6f6;
    }
    .results-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    .result-card {
      background-color: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: 0.3s;
      display: flex;
    flex-direction: row; /* horizontal layout */
    gap: 20px;
    align-items: flex-start;
    }
    .result-card:hover {
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .result-card-inner {
      display: flex;
      gap: 15px;
      align-items: flex-start;
    }

    .result-card img {
      width: 180px;
      height: auto;
      object-fit: cover;
      border-radius: 6px;
      flex-shrink: 0;
    }

    .product-details {
      flex: 1;
    }

    .product-details h3 {
      margin: 5px 0;
      font-size: 1.2rem;
    }

    .product-details p {
      margin: 4px 0;
    }

    .product-details .price {
      font-weight: bold;
      color: green;
      margin: 5px 0;
    }

    .product-details button {
      background-color: #4CAF50;
      color: white;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 10px;
    }

    .product-details button:hover {
      background-color: #388e3c;
    }

    /* üì± Responsive */
    @media (max-width: 600px) {
      .result-card-inner {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .result-card img {
        width: 100%;
        height: auto;
        max-height: 200px;
      }

      .product-details {
        width: 100%;
      }
    }
  </style>
</head>
<body>

<!-- ‚úÖ Header -->
<header>
  <div class="header-left">
    <div class="menu-toggle">&#8942;</div>
    <div class="logo">üåø KrishiMitra</div>
  </div>
  <nav class="nav-links">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="#contact">Contact</a></li>
      <li><a href="#products">Products</a></li>
      <li><a href="#about-section">About Us</a></li>
      <li><a href="">Detect Disease</a></li>
      <% if (!currentUser) { %>
        <li><a href="/login">Login</a></li>
      <% } else { %>
        <li><a href="/logout">Logout</a></li>
      <% } %>
      <li><a href="#"><div id="google_translate_element"></div></a></li>
    </ul>
  </nav>
</header>

<!-- ‚úÖ Search Box -->
<form action="/search" method="post">
  <div class="search-bar" style="margin: 20px;">
    <input type="text" name="searchQuery" placeholder="Search for products..." />
    <button type="submit">Search</button>
  </div>
</form>

<!-- ‚úÖ Search Results -->
<section class="search-results">
  <% if (products.length === 0) { %>
    <p>No products found. Try searching something else.</p>
  <% } else { %>
    <div class="results-grid">
      <% products.forEach(product => { %>
        <div class="result-card">
          <div class="result-card-inner">
            <% if (product.image && product.image.url) { %>
              <img src="<%= product.image.url %>" alt="<%= product.name %>">
            <% } else { %>
              <img src="/placeholder.jpg" alt="Product image">
            <% } %>
            <div class="product-details">
              <h3><%= product.name %></h3>
              <p class="price">‚Çπ<%= product.price %></p>
              <p><%= product.description.substring(0, 100) %>...</p>
              <a href="/farmer/<%= product.farmer._id %>">
                <button>Contact Farmer</button>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<!-- ‚úÖ Footer -->
<footer>
  <div class="footer-content" id="footer-content">
    <p>&copy; 2025 Farmers Market. All rights reserved.</p>
    <p>Contact Us: üìû +91 98765 43210 | ‚úâ support@farmersmarket.com</p>
    <p>üìç Pune, Maharashtra, India</p>
  </div>
</footer>

<!-- Google Translate -->
<script type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement(
      {
        pageLanguage: 'en',
        includedLanguages: 'en,as,bn,gu,hi,kn,ml,mr,ne,or,pa,ta,te,ur,es,fr,de',
        layout: google.translate.TranslateElement.InlineLayout.SIMPLE
      },
      'google_translate_element'
    );
  }
</script>
<script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

</body>
</html>
